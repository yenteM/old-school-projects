<Page
    x:Class="HelloApps.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloApps"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock HorizontalAlignment="Left"
                   Margin="40,174,0,0" Text="Click the button"
                   VerticalAlignment="Top"
                   FontSize="40"
                   Name="statusTextBlock"/>
        <Button Content="Click me" HorizontalAlignment="Left"
                Margin="40,40,0,0" VerticalAlignment="Top"
                Name="sayButton" Click="sayButton_Click"
                FontSize="40"/>
    </Grid>
</Page>