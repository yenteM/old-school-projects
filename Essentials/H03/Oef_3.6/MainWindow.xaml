<Window x:Class="Oef_3._6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oef_3._6"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Canvas HorizontalAlignment="Left" Name="faceCanvas" Background="Gray" Height="302" Margin="120,10,0,0" VerticalAlignment="Top" Width="390" MouseMove="Canvas_MouseMove">
            <TextBox x:Name="cursorBox" Height="23" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="269" Width="370"/>
        </Canvas>
        <Button x:Name="button" Content="draw face" HorizontalAlignment="Left" Height="302" Margin="10,10,0,0" VerticalAlignment="Top" Width="105" Click="button_Click"/>
    </Grid>
</Window>
