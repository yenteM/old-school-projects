<Page x:Class="AlbumAdmin.ShowAllPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AlbumAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
      Title="ShowAllPage" Background="White">

    <Grid>
        <DataGrid x:Name="albumDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Stretch" Margin="20,20,20,20" VerticalAlignment="Stretch" MinHeight="200">
            <DataGrid.Columns>
                <DataGridTextColumn Header="AlbumId" Width="auto" Binding="{Binding Path=AlbumId}"></DataGridTextColumn>
                <DataGridTextColumn Header="GenreId" Width="auto" Binding="{Binding Path=GenreId}"></DataGridTextColumn>
                <DataGridTextColumn Header="ArtistId" Width="auto" Binding="{Binding Path=ArtistId}"></DataGridTextColumn>
                <DataGridTextColumn Header="Title" Width="3*" Binding="{Binding Path=Title}"></DataGridTextColumn>
                <DataGridTextColumn Header="Price" Width="1*" Binding="{Binding Path=Price}"></DataGridTextColumn>
                <DataGridTextColumn Header="AlbumArtUrl" Width="3*" Binding="{Binding Path=AlbumArtUrl}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
