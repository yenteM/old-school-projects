<Window x:Class="Exercise4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise4"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>

        <ComboBox x:Name="ComboBox" SelectedValuePath="Content" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,150,0,0" >
            <ComboBoxItem>Console Application</ComboBoxItem>
            <ComboBoxItem>Windows Form Application</ComboBoxItem>
            <ComboBoxItem IsSelected="True">WPF Application</ComboBoxItem>
        </ComboBox>

        <TextBlock x:Name="SelectionTextBlock" VerticalAlignment="Top" HorizontalAlignment="Left" Height="20" Margin="250,150,0,0"/>

    </Grid>
</Window>
