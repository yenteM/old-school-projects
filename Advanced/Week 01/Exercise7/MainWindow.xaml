<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise7"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="Exercise7.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="naamTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,12,0,0" Text="Naam:"/>
        <TextBlock x:Name="beginTijdTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,37,0,0" Text="Startdatum en tijd:"/>
        <TextBlock x:Name="eindTijdTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,62,0,0" Text="Einddatum en tijd:"/>
        <TextBox x:Name="naamTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="125,10,0,0" Width="150"/>
        <Button x:Name="okButton" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,83,0,0" Content="OK" Width="150"/>
        <xctk:DateTimePicker x:Name="startDatum" HorizontalAlignment="Left" Margin="125,33,0,0" VerticalAlignment="Top" Width="150"/>
        <xctk:DateTimePicker x:Name="eindDatum" HorizontalAlignment="Left" Margin="125,58,0,0" VerticalAlignment="Top" Width="150"/>
    </Grid>
</Window>
